
<br/>
    <%= form_with(model: book) do |form| %>
      <% if book.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% book.errors.each do |error| %>
              <p><%= error.full_message %></p>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>

      <div class="field">
        <%= form.label 'Private?'%>
        <%= form.check_box :private %>
      </div>


      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
